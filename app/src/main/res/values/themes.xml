<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UrbanScore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/category_social_bg</item>
    </style>

    <style name="Theme.UrbanScore" parent="Base.Theme.UrbanScore" />

    <style name="BottomNavigationStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@color/primary_light</item>
        <item name="itemTextColor">@color/primary_light</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Splash screen theme for Android 12+ -->
    <!-- Splash screen theme for Android 12+ -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Splash screen arkaplan rengi -->
        <item name="windowSplashScreenBackground">#1e202c</item>

        <!-- Uygulamanın logosunu kullan -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Ana tema -->
        <item name="postSplashScreenTheme">@style/Theme.UrbanScore</item>

        <!-- Status bar rengini ayarla -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Özel Slider Stili - İnce çubuk, kalın tutamaç -->
    <style name="CustomSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="tickVisible">false</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbRadius">36dp</item>
        <item name="thumbHeight">24dp</item>
        <item name="thumbWidth">24dp</item>
        <item name="trackHeight">18dp</item>
        <item name="trackColorInactive">#E0E0E0</item>
        <item name="trackColorActive">@color/primary_purple</item>
        <item name="thumbColor">#1BA4C6</item>
        <item name="thumbElevation">1dp</item>
        <item name="haloColor">#882D6D62</item>
        <item name="haloRadius">2dp</item>
    </style>

    <!-- Search Bottom Sheet Items -->
    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_fitToContents">true</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>