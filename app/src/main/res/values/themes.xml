<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UrbanScore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.UrbanScore" parent="Base.Theme.UrbanScore" />

    <style name="BottomNavigationStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/gradient_end</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Splash screen theme for Android 12+ -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Splash screen arkaplan rengi -->
        <item name="windowSplashScreenBackground">@color/auth_primary</item>

        <!-- Uygulamanın logosunu kullan -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/loginicon2</item>

        <!-- Ana tema -->
        <item name="postSplashScreenTheme">@style/Theme.UrbanScore</item>

        <!-- Status bar rengini ayarla -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Özel Slider Stili - İnce çubuk, kalın tutamaç -->
    <style name="CustomSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="tickVisible">false</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbRadius">24dp</item>
        <item name="thumbHeight">18dp</item>
        <item name="trackHeight">8dp</item>
        <item name="trackColorInactive">#E0E0E0</item>
        <item name="trackColorActive">@color/rating_color</item>
        <item name="thumbColor">@color/rating_color</item>
        <item name="thumbElevation">1dp</item>
        <item name="haloColor">#882D6D62</item>
        <item name="haloRadius">2dp</item>
    </style>

</resources>