<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Mevcut arka plan rengi -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp"></corners>
            <solid android:color="#E10E303C" />
        </shape>
    </item>

    <!-- Gürültü dokusu -->
    <item>
        <bitmap
            android:src="@drawable/citylistbg"
            android:tileMode="repeat"
            android:alpha="0.7" /> <!-- Gürültü şiddetini buradan ayarlayabilirsiniz (0.0-1.0) -->
    </item>
</layer-list>