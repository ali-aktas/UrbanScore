<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Mevcut arka plan rengi -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#816ADF" />
            <corners android:radius="28dp"></corners>
        </shape>
    </item>

    <!-- Gürültü dokusu -->
    <item>
        <bitmap
            android:src="@drawable/noisetexture"
            android:tileMode="repeat"
            android:alpha="0.3" /> <!-- Gürültü şiddetini buradan ayarlayabilirsiniz (0.0-1.0) -->
    </item>
</layer-list>