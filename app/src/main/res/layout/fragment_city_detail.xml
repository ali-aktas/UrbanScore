<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent">

    <!-- Üst kısımdaki sabit görsel alanı (şimdilik siyah) -->
    <View
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/loginicon2" />

    <ImageButton
        android:id="@+id/toolbar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back button"
        android:src="@drawable/ic_back"
        app:tint="@color/white"/>

    <!-- Şehir Bilgileri - NestedScrollView dışında -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:padding="22dp">

        <!-- Bayrak -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFlag"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:contentDescription="@string/country_flag"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@color/black" />

        <!-- Şehir Adı -->
        <TextView
            android:id="@+id/textCityName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtAverageRating"
            app:layout_constraintStart_toEndOf="@id/imgFlag"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Istanbul" />

        <!-- Değerlendirme Sayısı -->
        <TextView
            android:id="@+id/txtRatingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/txtAverageRating"
            app:layout_constraintEnd_toEndOf="@id/txtAverageRating"
            app:layout_constraintTop_toBottomOf="@id/txtAverageRating"
            tools:text="1.2k rated" />

        <!-- Ortalama Puan -->
        <TextView
            android:id="@+id/txtAverageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/rating_color"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="8.64" />

        <!-- Ülke ve Bölge Bilgileri -->
        <LinearLayout
            android:id="@+id/layoutCountryRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/txtRatingCount">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country: "
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtCountry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                tools:text="Türkiye" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region: "
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtRegion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                tools:text="Europe &amp; Asia" />
        </LinearLayout>

        <!-- Nüfus Bilgisi -->
        <LinearLayout
            android:id="@+id/layoutPopulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/layoutCountryRegion">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Population: "
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtPopulation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                tools:text="15.5M" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Ana İçerik için NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:overScrollMode="never"
        android:layout_marginTop="310dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="22dp">

            <!-- Butonlar: Rate City ve Add to Wishlist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRateCity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="@string/rate_this_city"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:backgroundTint="#1F7B87"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_rate" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddToWishlist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/add_to_wishlist"
                    android:textColor="@color/white"
                    android:backgroundTint="#1F8360"
                    android:textAllCaps="false"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_wishlist" />
            </LinearLayout>

            <!-- Environment & Aesthetics - Modern, çerçevesiz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/environment_title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/environment_desc"
                        android:textSize="11sp"
                        android:alpha="0.7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtEnvironmentRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rating_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    tools:text="9.94" />
            </LinearLayout>

            <!-- Kategorileri ayırmak için hafif divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginBottom="12dp"/>

            <!-- Safety & Tranquility - Modern, çerçevesiz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/safety_title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/safety_desc"
                        android:textSize="11sp"
                        android:alpha="0.7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSafetyRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rating_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    tools:text="8.7" />
            </LinearLayout>

            <!-- Kategorileri ayırmak için hafif divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginBottom="12dp"/>

            <!-- Livability - Modern, çerçevesiz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/livability_title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/livability_desc"
                        android:textSize="11sp"
                        android:alpha="0.7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtLivabilityRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rating_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    tools:text="8.9" />
            </LinearLayout>

            <!-- Kategorileri ayırmak için hafif divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginBottom="12dp"/>

            <!-- Cost of Living - Modern, çerçevesiz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost_title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cost_desc"
                        android:textSize="11sp"
                        android:alpha="0.7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtCostRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rating_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    tools:text="7.5" />
            </LinearLayout>

            <!-- Kategorileri ayırmak için hafif divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#20FFFFFF"
                android:layout_marginBottom="12dp"/>

            <!-- Social & Cultural Life - Modern, çerçevesiz -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/social_title"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/social_desc"
                        android:textSize="11sp"
                        android:alpha="0.7" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtSocialRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/rating_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    tools:text="9.1" />
            </LinearLayout>

            <!-- Explore Butonları - Şablona uygun bir şekilde tasarlandı -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExploreYouTube"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Explore on YouTube"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_extralight"
                android:gravity="center"
                android:padding="10dp"
                app:icon="@drawable/ic_youtube"
                app:iconTint="@color/white"
                android:backgroundTint="#ABB10000" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExploreGoogle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Explore on Google"
                android:textColor="@color/white"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                android:fontFamily="@font/roboto_extralight"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10dp"
                app:icon="@drawable/ic_google"
                app:iconTint="@color/white"
                android:backgroundTint="#B0000000" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>