<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/purplebuttonbg">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/roboto_extralight"
                android:text="Rate This City"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_marginBottom="16dp"/>

            <!-- Gastronomy & Diversity Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/gastronomy_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderGastronomy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    android:value="5.0"
                    style="@style/CustomSliderStyle"/>

                <TextView
                    android:id="@+id/tvGastronomyRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- City Aesthetics Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/aesthetics_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderAesthetics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    style="@style/CustomSliderStyle"
                    android:value="5.0"/>

                <TextView
                    android:id="@+id/tvAestheticsRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- Safety & Peace Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/safety_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSafety"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    style="@style/CustomSliderStyle"
                    android:value="5.0"/>

                <TextView
                    android:id="@+id/tvSafetyRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- Cultural Heritage Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/culture_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderCulture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    style="@style/CustomSliderStyle"
                    android:value="5.0"/>

                <TextView
                    android:id="@+id/tvCultureRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- Livability & Nature Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/livability_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderLivability"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    style="@style/CustomSliderStyle"
                    android:value="5.0"/>

                <TextView
                    android:id="@+id/tvLivabilityRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- Social Life & Affordability Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/social_title"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderSocial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    style="@style/CustomSliderStyle"
                    android:value="5.0"/>

                <TextView
                    android:id="@+id/tvSocialRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- Local Hospitality Category -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="@string/hospitality_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderHospitality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:valueFrom="0.0"
                    android:valueTo="10.0"
                    android:stepSize="0.1"
                    style="@style/CustomSliderStyle"
                    android:value="5.0"/>

                <TextView
                    android:id="@+id/tvHospitalityRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_marginStart="6dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#1BA4C6"
                    android:text="5.0"/>
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Submit Your Rating"
                android:backgroundTint="@color/primary"
                android:textAllCaps="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Lottie Animation Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationLoading"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading_animation" />

    </FrameLayout>

    <!-- Basit Progress Bar (yedek olarak) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>