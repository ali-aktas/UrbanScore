<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="18dp"
    android:paddingStart="18dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAppName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:overScrollMode="never"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/categoryTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Cities on Categories"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="18dp"
                android:layout_marginTop="12dp"
                />

            <!-- Continents Carousel -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCategories"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:foregroundGravity="center"
                android:clipToPadding="false"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:padding="18dp"
                app:layout_constraintTop_toBottomOf="@+id/categoryTitleText"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_continent" />


            <!-- Cities List Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCitiesList"
                android:layout_width="match_parent"
                android:focusable="true"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:background="@null"
                android:layout_marginTop="18dp"
                android:backgroundTintMode="multiply"
                app:strokeWidth="0dp"
                app:strokeColor="@color/rating_color"
                app:cardCornerRadius="26dp"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewCategories">

                <LinearLayout
                    android:id="@+id/topCitiesListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/noise_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTopRatedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/top_rated_cities"
                        android:textColor="#BEFFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="333dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewCities"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clipToPadding="false"
                            android:nestedScrollingEnabled="true"
                            android:orientation="vertical"
                            android:overScrollMode="never"
                            android:scrollbars="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_city" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/txtViewListFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="View all list"
                        android:textColor="#92C8C8C8"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Editors' Choices Section - Static Implementation for UI Testing -->
            <TextView
                android:id="@+id/txtEditorsChoicesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="24dp"
                android:text="Editor's choices"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#D8D8D8"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/cardCitiesList"/>

            <GridLayout
                android:id="@+id/editorsChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txtEditorsChoicesTitle"
                android:columnCount="2"
                android:rowCount="3"
                android:useDefaultMargins="true">

                <!-- İstanbul -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#1E88E5"
                            android:contentDescription="İstanbul" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="12dp"
                            android:text="İstanbul"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_rating"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="4.9"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Paris -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="4dp"
                    android:focusable="true"
                    android:clickable="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#4CAF50"
                            android:contentDescription="Paris" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="12dp"
                            android:text="Paris"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_rating"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="4.8"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reklam kartı -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFC107">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="REKLAM"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="16dp"
                            android:text="Reklam Alanı"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tokyo -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#9C27B0"
                            android:contentDescription="Tokyo" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="12dp"
                            android:text="Tokyo"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_rating"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="4.7"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Roma -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_margin="4dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#FF5722"
                            android:contentDescription="Roma" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_overlay" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|start"
                            android:layout_margin="12dp"
                            android:text="Roma"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:layout_margin="12dp"
                            android:background="@drawable/bg_rating"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="4.6"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

            <!-- Loading Animation Container -->
            <FrameLayout
                android:id="@+id/loadingContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationLoading"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/loading_animation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="@string/loading_cities"
                    android:textColor="#BEFFFFFF"
                    android:textSize="16sp" />
            </FrameLayout>

            <!-- Error State Container -->
            <LinearLayout
                android:id="@+id/errorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationError"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/error_animation" />

                <TextView
                    android:id="@+id/textError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/error_loading_data"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnRetry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/retry"
                    android:textAllCaps="false" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>